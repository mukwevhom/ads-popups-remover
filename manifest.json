{
    "name": "Ads Popups Remover",
    "version": "1.0",
    "description": "Ads Popups Remover",
    "permissions": ["activeTab","declarativeContent","storage"],
    "content_scripts": [
        {
            "matches":[
                "https://www.businessinsider.com/*",
                "https://www.dailymail.co.uk/*",
                "https://www.footyheadlines.com/*"
            ],
            "css":["styles.css"],
            "js": ["content.js"],
            "run_at": "document_end"
        }
    ],
    "manifest_version": 3
}